{
  "compilerOptions": {
    /* Language & output */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Project structure */
    "rootDir": "./src",
    "outDir": "./my_code",

    /* JS interop */
    "allowJs": false,
    "checkJs": false,

    /* Type safety */
    "strict": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": true,

    /* Ergonomics */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,

    /* Declarations */
    "typeRoots": [
      "./node_modules/@types"
    ],

    "baseUrl": ".",

    "paths": {
      "tiny-graphics": ["./tiny-graphics.js"]
    }
  },

  "include": [
    "src/**/*",
    "*.d.ts",
    "examples/**/*.d.ts"
  ],

  "exclude": [
    "node_modules",
    "my_code"
  ]
}
